<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MessageApp.VerificationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MessageApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="VerificationWindow">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <StackPanel Spacing="20" VerticalAlignment="Center" Background="DimGray" Height="399" x:Name="StackPanel">
        <Button AutomationProperties.Name="Pie"  Foreground="DimGray" Background="DimGray" Command="{Binding BackButton}">
            <Image Source="/Assets/back.png" Height="21" Width="20"/>
        </Button>
        <Image Source="/Assets/choppa.png" Height="70" Width="80"/>
        <TextBlock Text="Verification Code:" HorizontalAlignment="Center"/>
        <TextBox HorizontalAlignment="Center" Width="150" MaxLength="6" TextAlignment="Center" TextWrapping="Wrap" Text="{Binding VerificationText,Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
        <Button  Content="Verify" HorizontalAlignment="Center" Command="{Binding VerificationCommand}"/>
    </StackPanel>
</Window>
